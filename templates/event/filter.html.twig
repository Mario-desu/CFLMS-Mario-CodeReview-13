{% extends 'base.html.twig' %}

{% block body %}
    {# here is the create message #}
	{% for message in app.flashes('notice') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}


    
	<div class="container d-flex shadow-lg w-100 mb-4 mt-4 justify-content-center" id="heading-style">
	
		<h2 class="text text-center p-2">All Events</h2>
		
	</div>
    {# here the card begins #}
	<div class="container d-flex justify-content-center index-wrapper">
		<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {#loop trough $events#}
			{% for event in events %}
				<div class="col">
					<div class="card p-2 h-100 hoverCard" id="shadowCard">
						<img src="/images/{{event.image}}" class="card-img-top img-style" alt="{{event.name}}">
						<div class="card-body">
							<h5 class="card-title">{{event.name}}</h5>
							<p class="card-text">{{event.schedulded|date('F j, Y, g:i a')}}.</p>
						</div>
						<div class="card-footer">
							<a href="/details/{{event.id}}" class="btn detail-btn">
								Details</i>
							</a>
							<a href="/edit/{{event.id}}" class="btn edit-btn">
								<i class="far fa-edit"></i>
							</a>
							<a href="/delete/{{event.id}}" class="btn del-btn">
								<i class="far fa-trash-alt"></i>
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
